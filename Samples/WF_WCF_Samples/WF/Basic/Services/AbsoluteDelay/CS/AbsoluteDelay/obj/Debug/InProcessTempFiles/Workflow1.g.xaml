        <Variable x:TypeArguments="x:String" Name="variable" />
      </Sequence.Variables>
      <WriteLine Text="Delay versus Absolute Delay" />
      <WriteLine Text="The workflow is going to delay for a timespan of 5 seconds before sending email" />
